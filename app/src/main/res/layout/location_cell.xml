<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp">

            <TextView
                android:id="@+id/latlng_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lat_lng_placeholder"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"/>

            <View
                android:id="@+id/straight_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/latlng_list_view"
                android:background="@color/grey"></View>
            
            <TextView
                android:id="@+id/location_title_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lat_lng_placeholder"
                android:layout_below="@id/straight_line"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/location_info_list_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lat_lng_placeholder"
                android:layout_below="@id/location_title_list_view"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:textColor="@color/black"
                android:textSize="16dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>